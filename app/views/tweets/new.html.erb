<h3>新規作成</h3>
<div class="form-wrap">
  <%= form_for(@tweet) do |f| %>
  <div class="form-row">
    <%= f.label :theme, "ブログテーマ" %><br/>
    <%= f.text_field :theme, placeholder: "テーマを入力", autofocus: true, class: "form" %>
  </div>
  <div class="form-row">
    <%= f.label :text, "本文" %><br/>
    <%= f.text_area :text, placeholder: "本文を入力", autofocus: true, cols:"40", rows:"15", class: "textarea" %></br>
  </div>
  <div class="form-row">
    <%= f.label :image, "写真アップロード" %><br/>
    <%= f.file_field :image %>
  </div>
  <div class="form-row">
    <%= f.submit "投稿する", class: "btn" %>
  </div>
  <% end %>
</div>