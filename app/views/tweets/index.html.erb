<header>
  <div class="menu">
    <ul>
      <%= link_to 'ユーザー登録', new_user_registration_path, class: 'li' %>
      <%= link_to 'ログイン', new_user_session_path, class: 'li' %>
      <%= link_to '新規投稿', new_tweet_path, class: 'li' %>
    </ul>
  </div>
</header>

<div class="content-wrap">
  <div class="content">
    <% @tweets.each do |tweet| %>
    <div class="main-content">
      <div class="theme"><%= tweet.theme %></div>
      <div class="text"><%= tweet.text %></div>
    </div>
    <div class="image">
      <%= tweet.image_id %>
    </div>
    <div class="btn-wrap">
      <ul>      
        <li><%= link_to '編集', edit_tweet_path(tweet) %></li>
        <li><%= link_to '削除する', "/tweets/#{tweet.id}", method: :delete %></li>
      </ul>
    </div>
    <% end %>
    </div>
  </div>
</div>

<footer>
  ここにフッター
</footer>