<div class="form-wrap">
  <div class="form-row">
    <%= f.label :nickname, "ユーザーネーム" %><br/>
    <%= f.text_field :nickname, autofocus: false, class: "form" %>
  </div>
  <div class="form-row">
    <%= f.label :study_code, "勉強しているプログラミング言語" %><br/>
    <%= f.text_field :study_code, placeholder: "言語を入力", autofocus: true, class: "form" %>
  </div>
  <div class="form-row">
    <%= f.label :pc_os, "パソコンのOS" %><br/>
    <%= f.text_field :pc_os, placeholder: "ご自身のOS種類を入力", autofocus: true, class: "form" %></br>
  </div>
  <div class="form-row">
    <%= f.label :introduction, "自己紹介" %><br/>
    <%= f.text_area :introduction, placeholder: "自己紹介文を入力", cols: "40", rows: "20", autofocus: true, class: "textarea" %></br>
  </div>
  <div class="form-row">
    <%= f.file_field :image, placeholder: "写真アップロード" %>
  </div>
  <div class="form-row">
    <%= f.submit "編集する", class: "btn" %>
  </div>
</div>